<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@TemaOscuro.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Vista.OrganizadorRaizContralador">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Nuevo" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Abrir" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Guardar" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Guardar como.." />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Salir" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Estadisticas">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="Ver Estatdisticas" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
